                </ul>
            </div><!--footer social col-->
        </div><!--col-4 end-->

        <div class="col-md-3 margin-btm-20">
            <div class="footer-col">
                <h3>Quick Links</h3>
                <ul class="post-list list-unstyled">
                    <li>
                        @Html.ActionLink("Student Portal", "Index", "Admin", null, new { @class = "hover-color" })
                    </li>
                    <li>
                        @Html.ActionLink("Project Portal", "Index", "Admin", null, new { @class = "hover-color" })
                    </li>
                    <li>
                        @Html.ActionLink("Employee Login", "Index", "Admin", null, new { @class = "hover-color" })
                    </li>
                    <li>
