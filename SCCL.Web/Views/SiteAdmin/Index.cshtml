@model SCCL.Web.ViewModels.SolutionServiceViewModel


@{
    ViewBag.Title = "Website Administrator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Site Admin Index</h1>

<h2>List of Solutions</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Solution.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Solution.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Solution.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var soln in Model.Solutions)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => soln.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => soln.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => soln.Description)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", "Solutions", new { id = soln.Id } , null) |
                @Html.ActionLink("Delete", "Delete", "Solutions", new { id = soln.Id }, null)
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New", "Create", "Solutions", new {@class = "btn btn-lg theme-btn-color"}, null)
</p>


<br/><br/>
