@model SCCL.Core.Entities.ContactMessage

@{
    ViewBag.Title = "Contact Us";
}

<!--google map-->
<div id="map-canvas"></div>
<!--google map end-->

<div class="space-70"></div>
<div class="container">
    <div class="col-md-5">
        <h4 class="heading-mini">We’d Love to Hear From You</h4>
        <p>Get in touch using the contact details below:</p>
        <p>Stable Corps</p>
        <p>P.O. Box KS 16999</p>
        <p>Kumasi, Ghana</p>
        <p>Phone: +233 20 049 5297, +1 724 713 2249 </p>
        <p>Email: <a href="#">info@stablecorps.com</a></p>
    </div>
    <div class="col-md-6 col-md-offset-1">
        <h4 class="heading-mini">Contact us</h4>
        
        @*Contact Form*@
        <div class="my-contact-form">
            @using (Html.BeginForm("Create", "Contact"))
            {
                <div class="row">
                    @*Name field*@
                    <div class="col-md-6">
                        <div class="row control-group">
                            <div class="form-group col-xs-12 controls">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder="Name*" } })
                                @*<input type="text" name="name" class="form-control" placeholder="Name*" id="name" required data-validation-required-message="Please enter your name.">*@
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    @*End of Name Field*@
                    
                    @*Email Field*@
                    <div class="col-md-6">
                        <div class="row control-group">
                            <div class="form-group col-xs-12 controls">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email Address*" } })
                                @*<input type="email" name="email" class="form-control" placeholder="Email Address*" id="email" required data-validation-required-message="Please enter your email address.">*@
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    @*End of Email Field*@
                </div>
                
                <div class="row control-group">
                    @*Subject*@
                    <div class="form-group col-xs-12">
                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", placeholder = "Subject" } })
                        @*<input type="text" name="subject" class="form-control" placeholder="Subject" id="phone">*@
                        <p class="help-block"></p>
                    </div>
                    @*End of Subject*@
                </div>
                
                <div class="row control-group">
                    @*Message Field*@
                    <div class="form-group col-xs-12 controls">
                        @*@Html.TextAreaFor(e => e.MessageBody, 10, 55, new { htmlAttributes = new { @class = "form-control", placeholder = "Message*" } })*@
                        @Html.TextArea("MessageBody", "Message*", 5, 86, new { htmlAttributes = new { @class = "form-control" }}) 
                        @*@Html.EditorFor(model => model.MessageBody, new {htmlAttributes = new {@class = "form-control", placeholder = "Name*"}})*@
                        @*<textarea rows="5" name="message" class="form-control" placeholder="Message*" id="message" required data-validation-required-message="Please enter a message."></textarea>*@
                        <p class="help-block"></p>
                    </div>
                    @*End of Message Field*@
                </div>
                <br>
                
                <div id="success"></div>
                
                <div class="row">
                    <div class="form-group col-xs-12 text-right" style="margin-top: -15px;">
                        <button type="submit" class="btn theme-btn-color btn-lg">Send Message</button>
                    </div>
                </div>
            }            
        </div>
        @*End of Contact From*@
    </div>
</div><!--contact page end-->
<div class="space-70"></div>

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script src="~/Scripts/gmap-data.js"></script>


