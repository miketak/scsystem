@model SCCL.Web.ViewModels.SolutionServiceViewModel

@{
    ViewBag.Title = ViewBag.NavTitle;
}

@section metatags{
    <meta name="description" content="Browse our rich content of Solutions and Services to help make the world a better place.">
    <meta name="keywords" content="renewable-energy, industry, finite element analysis, multibody dynamics, mathematical modelling, chemical process design">
}

<!--Title Strip-->
<section id="content-region-3" class="page-tree-bg">
    <div class="container">
        <p class="page-tree-text">@Html.Partial("_BreadCrumps")</p>
    </div>
</section>
<!--End of Title Strip-->

<div class="space-20"></div>

<div class="container">
    <div class="row">
        <!--SolServices Nav-->
        <div class="col-md-4">
            @Html.Partial("_SolServNav", Model)
        </div>
        <!--End of SolServices Nav-->
        
        <!--Solution Content-->
        <div class="col-md-8">
            @Html.Partial("_SolServContent", Model)

            <!--Button Link-->
            <br/>
            <p align="center">
                @Html.ActionLink("Contact Us", "Index", "Contact", null, new {@class = "btn btn-lg theme-btn-color"})
            </p>
            <!---->
        </div>
        <!--End of Solution Content-->
    </div>
</div>

<div class="space-70"></div>